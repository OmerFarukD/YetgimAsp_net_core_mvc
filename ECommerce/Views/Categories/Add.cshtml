@model Category

<form asp-controller="Categories" asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="Name"  class="form-label">Kategori adı</label>
        <input asp-for="Name" type="text" class="form-control">
        <span class="text-warning" asp-validation-for="Name"></span>
    </div>

    <div class="form-floating">
        <textarea asp-for="Description" class="form-control" placeholder="Lütfen Açıklama giriniz."></textarea>
        <label asp-for="Description">Açıklama</label>
        <span class="text-warning" asp-validation-for="Description"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Ürün Ekle</button>
</form>