@model List<Product>

<table class="table table-success table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Adı</th>
        <th scope="col">Fiyat</th>

        <th scope="col">İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Product product in Model)
    {
        <tr>
            <th scope="row">@product.Id</th>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td><a style="text-decoration: none;" asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id">Detaya git</a>
                <a style="text-decoration: none; color: orange; margin: 5px " asp-controller="Products" asp-action="Update" asp-route-id="@product.Id">Güncelle</a>
                <a style="text-decoration: none; color: red; margin: 5px " asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id">Sil</a>
            
                </td>
 
        
            </tr> 
    }
    </tbody>
</table>
<a class="btn btn-outline-success" asp-controller="Products" asp-action="Add"> Yeni Ürün Ekle</a>