@model List<ECommerce.Models.Dtos.Categories.CategoryResponseDto>


<table class="table table-stripped table-hover table-success">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">İşlemler</th>
        

    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td><a asp-controller="Categories" asp-action="Detail" 
                   asp-route-id=@item.Id>Detaya git</a></td>
        </tr> 
    }


    </tbody>
</table>